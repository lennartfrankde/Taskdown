{
	"name": "taskdown",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"tauri": "tauri",
		"tauri:dev": "tauri dev",
		"tauri:build": "tauri build",
		"docker:build": "docker build -t registry.serverfrank.de/taskdown:latest .",
		"docker:run": "docker run -p 3000:3000 registry.serverfrank.de/taskdown:latest",
		"services:start": "docker-compose -f docker-compose.dev.yml up -d",
		"services:stop": "docker-compose -f docker-compose.dev.yml down",
		"services:logs": "docker-compose -f docker-compose.dev.yml logs -f",
		"dev:setup": "npm run services:start && echo \"ðŸš€ Local services started! Run npm run dev to start development server\"",
		"dev:teardown": "npm run services:stop",
		"dev:full": "npm run services:start && npm run dev",
		"docker:build:pr": "docker build -t registry.serverfrank.de/taskdown:pr-$(git rev-parse --short HEAD) .",
		"deploy:prod": "npm run docker:build && docker push && curl -X POST \"$COOLIFY_WEBHOOK_URL\"",
		"deploy:trigger": "curl -X POST \"$COOLIFY_WEBHOOK_URL\"",
		"deploy:pr": "npm run docker:build:pr && docker push && echo \"PR deployment complete\""
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@tauri-apps/cli": "^2.7.1",
		"@vitest/browser": "^3.2.3",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@tauri-apps/api": "^2.7.0",
		"dexie": "^4.0.11"
	}
}
